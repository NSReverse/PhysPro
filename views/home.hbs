        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.0/socket.io.slim.js"></script>
        <script type="text/javascript">
            var socket = io();

            socket.on('connect', function(error) {
                if (error) {
                    alert(error);
                }
            });

            socket.on('disconnect', function() {});

            $('#nav-search-input').on('submit', function(e) {
                e.preventDefault();

                var searchTextBox = $('[name=search-input-box]');

                if (searchTextBox.val() === "") {
                    alert('Please enter a value into the field to the left.');
                }
                else {
                    socket.emit('performSearch', {
                        text: searchTextBox.val(),
                    });
                }
            });

            $('#nav-search-input').on('reset', function(e) {
                e.preventDefault();

                var searchTextBox = $('[name=search-input-box]');

                if (searchTextBox.val() === "") {
                    alert('Please enter a value into the field to the left.');
                }
                else {
                    socket.emit('performCreate', {
                        text: searchTextBox.val(),
                    });
                }
            });

            $('[data-toggle="tooltip"]').tooltip();  
        </script>
